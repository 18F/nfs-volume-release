---
processes:
- name: nfsv3driver
  executable: /var/vcap/jobs/nfsv3driver/bin/start.sh
  unsafe:
    privileged: true
    unrestricted_volumes:
    - path: /dev/fuse
      allow_executions: true
      mount_only: true
  limits:
    open_files: 100000
  additional_volumes:
    - path: "<%= p("nfsv3driver.cell_mount_path") %>"
      writable: true
      shared: true
    - path: "<%= p("nfsv3driver.driver_path") %>"
      writable: true
